<p id="notice"><%= notice %></p>

<h1>Sessaos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Hora</th>
      <th>User</th>
      <th>Paciente</th>
      <th>Psicologo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessaos.each do |sessao| %>
      <tr>
        <td><%= sessao.data %></td>
        <td><%= sessao.hora %></td>
        <td><%= sessao.user_id %></td>
        <td><%= sessao.paciente.nome %></td>
        <td><%= sessao.psicologo.nome %></td>
        <td><%= link_to 'Mostar', sessao %></td>
        <td><%= link_to 'Editar', edit_sessao_path(sessao) %></td>
        <td><% if can? :destroy,Sessao %>
            <%= link_to 'Delete', sessao, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create,Sessao %>
  <%= link_to 'Nova Sessao', new_sessao_path %>
<% end %>
<%= link_to 'Voltar',root_path%>