<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Endereco</th>
      <th>Psicologo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.cpf %></td>
        <td><%= paciente.telefone %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.endereco %></td>
        <td><%= paciente.psicologo.nome.split[0] %></td>
        <td><%= link_to 'Mostrar', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente),id:"e-#{paciente.cpf}" %></td>
        <td><% if can? :destroy,Paciente %>
          <%= link_to 'Deletar', paciente,id:"d-#{paciente.cpf}", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create,Paciente %>
  <%= link_to 'Novo Paciente', new_paciente_path %>
<% end %>
<%= link_to 'Voltar',root_path%>